<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <title>Mes produits</title>
  <link rel="stylesheet" href="style.css">
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script> 
  <script src="script.js"></script>
</head>
<body>
    <div id="login-form">
    <form>
        <input type="text" id="order_product" name="order_product" >
        <input type="text" name="email" id="email">
        <input type="text" name="password" id="password">
        <input type="button" value="Login & commander" onclick="orderProduct($('#order_product').val());event.preventDefault()">
    </form>
    </div>
    <ul>
        <% products.forEach(function(product){ %>
            <li><%= product.name %> (<%= product.orders_counter %>)<button class="btn" onclick="orderProduct('<%= product.id %>');event.preventDefault()">Commander</button></li>
        <% }); %>
    </ul>
</body>
</html>
